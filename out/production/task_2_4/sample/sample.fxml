<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="20" vgap="20" xmlns="http://javafx.com/javafx/8.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
<TextArea fx:id="textArea" prefWidth="400" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
<TextField fx:id="textField" prefWidth="150" promptText="Введите сообщение" GridPane.columnIndex="0" GridPane.rowIndex="2" />
<Button onAction="#clickSend" text="Отправить" GridPane.columnIndex="1" GridPane.rowIndex="2" />
<Button onAction="#clickClear" text="Очистить" GridPane.columnIndex="1" GridPane.rowIndex="1" />
</GridPane>
